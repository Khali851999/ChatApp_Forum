<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".Register"

    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="40dp"
        android:background="@drawable/logosamp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="New Here?"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Register Using Email"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editUsername"
        android:hint="Enter a Username"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/registerbutt"
        android:padding="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editEmail"
        android:hint="Enter an Email"
        android:background="@drawable/registerbutt"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editPassword"
        android:hint="Enter a Password"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/registerbutt"
        android:padding="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupButton"
        android:text="Sign Up"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:background="@drawable/buttonshape1"

        android:onClick="signupButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Registered? LOGIN"
        android:padding="10dp"
        android:background="@drawable/buttonshape1"
        android:onClick="loginButtonClicked"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:text="or choose from other sign up options"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/phone"/>
        <ImageButton
            android:layout_marginRight="40dp"
            android:layout_width="80dp"
            android:layout_marginTop="15dp"
            android:layout_height="60dp"
            android:background="@drawable/googl"/>

    </LinearLayout>


</LinearLayout>